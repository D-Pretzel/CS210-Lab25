{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "D:/MinGW/bin/gcc.exe",
            "args": [
                "-g",
                "*.c",
                "-Wall",
                "-Werror",
                "-o",
                "${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}